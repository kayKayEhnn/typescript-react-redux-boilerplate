{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React boilerplate with webpack",
  "scripts": {
    "start": "TS_NODE_PROJECT=config/tsconfig-webpack.json webpack-dev-server",
    "build": "TS_NODE_PROJECT=config/tsconfig-webpack.json webpack --env=production",
    "lint": "tslint --fix -p ."
  },
  "keywords": [
    "react",
    "boilerplate",
    "webpack"
  ],
  "author": "KN",
  "license": "MIT",
  "dependencies": {
    "core-js": "^2.6.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.2",
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.11",
    "@types/webpack": "^4.4.22",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-env": "^1.13.6",
    "autoprefixer": "^9.4.3",
    "awesome-typescript-loader": "^5.2.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^0.28.11",
    "cssnano": "^4.1.8",
    "deepmerge": "^3.0.0",
    "error-overlay-webpack-plugin": "^0.1.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "is-plain-object": "^2.0.4",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "react-dev-utils": "^7.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.0",
    "tslint-config-standard": "^8.0.0",
    "typescript": "^3.2.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "tslint --fix -c tslint.json",
      "git add"
    ]
  }
}
