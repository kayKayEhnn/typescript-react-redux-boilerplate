{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es6"
    ],
    "jsx": "react",
    "paths": {
      "@Components/*": [
        "./components/*"
      ],
      "@Containers/*": [
        "./containers/*"
      ],
      "@Store/*": [
        "./store/*"
      ]
    }
  }
}